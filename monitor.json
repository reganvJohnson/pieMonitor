        , "| eval PXSuccessRate = round(PXSuccess / (PXSuccess + PXFailure) * 100, 2) "
        , "| fillnull value=100 MVSuccessRate PXSuccessRate "
        , "| eval Score = round((100 - (MVSuccessRate * PXSuccessRate / 100)) * Unexpectedness) "
